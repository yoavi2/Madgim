    <RadioGroup
        android:id="@+id/rg_target_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableRight="@drawable/tank" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/rb_enemy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/truck" />

    </RadioGroup>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:onClick="onNameFieldClick" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_name"
        android:layout_alignBottom="@+id/et_name"
        android:layout_toLeftOf="@+id/et_name"
        android:text="@string/text_name" />

   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_target_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:paddingBottom="10dp" >

        <Button
            android:id="@+id/btn_accept"
			android:textColor="#FFFFFF"
			android:textSize="22sp"
			android:layout_width="120dp"
			android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#66c7eb"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="@string/text_accept" />
 
        <Button
            android:id="@+id/btn_cancel"
			android:textColor="#FFFFFF"
			android:textSize="22sp"
			android:layout_width="120dp"
			android:layout_height="40dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#66c7eb"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="@string/text_cancel" />
    </LinearLayout>

</RelativeLayout>
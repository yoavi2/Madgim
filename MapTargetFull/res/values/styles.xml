<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/myactionbar</item>
    </style>
    <style name="myactionbar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/purple_dark</item>
    </style>
    
    <style name="cust_dialog" parent="@android:style/Theme.Holo.Light.Dialog">

    <item name="android:windowTitleStyle">@style/dialog_title_style</item>
    <item name="android:windowFullscreen">false</item>
  </style>

<style name="dialog_title_style" parent="android:Widget.TextView">
    <item name="android:background">@color/friend</item>
</style>

   

</resources>
